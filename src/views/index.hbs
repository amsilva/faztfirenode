<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Nuevo</h1>
        </div>
        <div class="card-body">
            Rellenar con tus datos
            {{#if listacontatos}}
                <h1>Mís amigos</h1>
                <ul class="list-group">
                {{#each listacontatos}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{firstname}} 
                        {{lastname}} |
                        {{email}} |
                        {{phone}}
                        <a href="" class="btn btn-danger">remover</a>
                    
                    </li>
                {{/each}}
                </ul>
            {{else}}
                <p>No contact yet. It's empty!</p>
            {{/if}}


        </div>
        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="ponga tu nombre, pincha de tu madre" class="form-control" autofocus>
                    <input type="text" name="lastname" placeholder="tu lastname" class="form-control" >
                    <input type="text" name="email" placeholder="email" class="form-control" >
                    <input type="text" name="phone" placeholder="y el contacto" class="form-control" >
                    <button class="btn btn-primary btn-block">Añadir</button>
                </div>
            </form>
        </div>
    </div>



</div>